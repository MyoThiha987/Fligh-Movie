<?xml version="1.0" encoding="utf-8"?>
<com.mth.padc_flight_movie.views.viewpods.DescriptionViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_about_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Film"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/colorGrey"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_original_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Original Title"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_original_title_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:justificationMode="inter_word"
            android:singleLine="false"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_type_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:justificationMode="inter_word"
            android:singleLine="false"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_production"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Production"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_production_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:justificationMode="none"
            android:singleLine="false"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_premiere"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Premiere"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_premiere_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:justificationMode="inter_word"
            android:singleLine="false"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:justificationMode="inter_word"
            android:singleLine="false"
            android:textSize="16sp"
            android:textColor="@color/colorPaleGrey"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            />
    </LinearLayout>

</com.mth.padc_flight_movie.views.viewpods.DescriptionViewPod>





