<?xml version="1.0" encoding="utf-8"?>
<com.mth.padc_flight_movie.views.viewpods.TopRateMovieViewPop
    android:id="@+id/viewpopTopRateMovie"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#455A64">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="1dp"
                app:srcCompat="@drawable/ic_baseline_play_circle_filled_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_movie_date"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:text="Dec 9 2020"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Infinity War"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@id/tv_movie_date"
                app:layout_constraintStart_toStartOf="@+id/tv_movie_date"
                 />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</com.mth.padc_flight_movie.views.viewpods.TopRateMovieViewPop>